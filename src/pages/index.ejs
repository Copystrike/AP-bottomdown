    <main>

      <!-- De Login form, action moet mss nog uitgewerkt worden -->
<div class="form-popup" id="loginForm">
  <form class="form-container">
    <h1>Login</h1>
    <p>You have to be logged in before selecting a game...</p>

    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required>


    <!-- de checkCredentials methode moet nog verdetr uitgewerkt worden -->

    <button type="submit" class="btn" onclick="checkCredentials()">Login</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>


      <section class="games">

        <figure id="mtg">
          <img src="/assets/mtg.jpg" onclick="checkIfLoggedIn('nogame')" />
