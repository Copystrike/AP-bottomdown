<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <%- include('../partials/head.ejs') %>
    <script defer src="./js/avatar.js"></script>
    <link rel="stylesheet" href="./css/avatar.css" />
    <link rel="stylesheet" href="./css/functies/modal.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
    <header>
      <img src="./assets/bottomgs.png" alt="Fortnite Logo" />
      <%- include('../partials/nav.ejs') %>
    </header>
    <!-- Avatar list -->
    <div class="avatar-select-container">
      <% for (let i = 1; i < 5; i++) { %>
      <div class="avatar-select-item">
        <img src="<%= items[i].item.images.icon%>/icon.png" alt="<%= items[i].item.name %>" width="250px" />
        <div>
          <button onclick="setAvatar('<%= items[i].item.images.icon %>')">Set <%= items[i].item.name %> as Avatar</button>
          <button type="button" class="btn btn-secondary" data-fortnite-character-id="<%= items[i].itemId %>">Meer Info</button>
        </div>
      </div>
      <% } %>
    </div>
    <!-- popup -->
    <div id="modal"></div>
    <!-- footer -->
    <%- include('../partials/foot.ejs') %>
    <script defer src="./js/functies/modal.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
