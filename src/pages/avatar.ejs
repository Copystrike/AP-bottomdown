<!DOCTYPE html>
<html lang="nl-BE">

<head>
  <%- include('../partials/head.ejs') %>
    <script defer src="./js/avatar.js"></script>
    <script defer src="./js/functies/modal.js"></script>
    <link rel="stylesheet" href="./css/avatar.css" />
</head>

<body>
  <header>
    <img src="/assets/logo.png" alt="Fortnite Logo" height="40px" />
    <%- include('../partials/nav.ejs') %>
  </header>
  <!-- Avatar list -->
  <div class="avatar-select-container">
    <% for (let i=0; i < items.length; i++) { %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= items[i].images.icon%>" alt="<%= items[i].name %>" />
        <div class="card-body">
          <h5 class="card-title text-center text-light"><%= items[i].name %></h5>
        </div>
        <div class="card-footer">
          <button type="button" class="btn btn-primary modal-button" data-toggle="modal" data-target="#myModal"
            data-fortnite-character-id="<%= items[i].id %>">
            Meer Info
          </button>
        </div>
      </div>
      <% } %>
  </div>
  </div>
  <!-- Modal  -->
  <div id="modal"></div>
  <%- include('../partials/foot.ejs') %>
    <script defer src="./js/functies/modal.js"></script>
</body>

</html>