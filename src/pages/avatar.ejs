<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <%- include('../partials/head.ejs') %>
    <script defer src="./js/avatar.js"></script>
    <link rel="stylesheet" href="./css/avatar.css">
  </head>
  <body>
    <header>
      <img src="/assets/logo.png" alt="PlayStation 4 Logo" />
      <%- include('../partials/nav.ejs') %>
    </header>
    <div>
      <% for (let i = 1; i < 5; i++) { %>
      <img class="avatar-list-item" src="<%= items[i].item.images.icon%>/icon.png" alt="<%= items[i].item.name %>" width="250px" />
      <button onclick="setAvatar('<%= items[i].item.images.icon %>')">Set <%= items[i].item.name %> as Avatar</button>
      <button id="myButton">Meer Info</button>
      <% } %>
    </div>
    <div id="myPopup" class="popup">
      <div class="popup-content">
        <h2>Info Avatar</h2>
        <p>Popupbox</p>
        <button id="closePopup">Sluit</button>
      </div>
    </div>
    <%- include('../partials/foot.ejs') %>
  </body>
</html>
