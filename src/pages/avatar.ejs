<!DOCTYPE html>
<html lang="nl-BE">
  <head>
    <%- include('../partials/head.ejs') %>
    <script defer src="./js/avatar.js"></script>
    <link rel="stylesheet" href="./css/avatar.css" />
    <link rel="stylesheet" href="./css/functies/modal.css" />
  </head>
  <body>
    <header>
      <img src="/assets/logo.png" alt="Fortnite Logo" />
      <%- include('../partials/nav.ejs') %>
    </header>
    <!-- Avatar list -->
    <div class="avatar-select-container">
      <% for (let i = 1; i < 5; i++) { %>
      <div class="avatar-select-item">
        <img src="<%= items[i].item.images.icon%>/icon.png" alt="<%= items[i].item.name %>" width="250px" />
        <div>
          <button onclick="setAvatar('<%= items[i].item.images.icon %>')">Set <%= items[i].item.name %> as Avatar</button>
          <button class="modal-btn" data-fortnite-character-id="<%= items[i].itemId %>">Meer Info</button>
        </div>
      </div>
      <% } %>
    </div>
    <!-- popup -->
    <div id="modal"></div>
    <!-- footer -->
    <%- include('../partials/foot.ejs') %>
    <script defer src="./js/functies/modal.js"></script>
  </body>
</html>
